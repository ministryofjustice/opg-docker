[global]
pid = /var/run/app/php7-fpm-app.pid
error_log = /var/log/app/php-fpm-master.log
log_level = notice
daemonize = no

;;;;;;;;;;;;;;;;;;;;
; Pool Definitions ;
;;;;;;;;;;;;;;;;;;;;


; Start a new pool named 'app'.
[app]

listen = 9000
listen.allowed_clients = 127.0.0.1
user = {{ getv "/opg/php/pool/user", "app" }}
group = {{ getv "/opg/php/pool/group", "app" }}

pm = static

pm.max_children = {{ getv "/opg/php/pool/children/max", "4" }}

pm.start_servers = 2

pm.min_spare_servers = 2

pm.max_spare_servers = 2

pm.max_requests = {{ getv "/opg/php/pool/requests/max", "0" }}

pm.status_path = /status

ping.path = /ping

ping.response = pong

request_terminate_timeout = {{ getv "/opg/php/pool/request/terminate/timeout", "60" }}

request_slowlog_timeout = 0

slowlog = /var/log/app/php-fpm-slow.log

catch_workers_output = yes

php_admin_value[error_log] = /var/log/app/php-fpm-error.log
php_admin_flag[log_errors] = on
php_admin_value[memory_limit] = {{ getv "/opg/php/pool/memory/limit", "256M" }}

php_value[session.save_handler] = files
php_value[session.save_path] = /data/session

php_value[session.name] = app-session

php_admin_value[post_max_size] = {{ getv "/opg/php/pool/post/max/size" , "64M" }}
php_admin_value[upload_max_filesize] = {{ getv "/opg/php/pool/upload/max/filesize", "64M" }}

php_value[max_input_vars] = {{ getv "/opg/php/pool/max/input/vars", "1000" }}
