open_mode: True
pillar_opts: True
file_roots:
  base:
    - /srv/salt
    - /srv/salt/_libs
    - /srv/salt-formulas
pillar_roots:
  base:
    - /srv/pillar
fileserver_backend:
  - roots
reactor:
  - 'salt/custom/*':
    - 'salt://reactor/salt_custom.sls'
  - 'file/create':
    - 'salt://reactor/reactor.sls'
peer:
  .*:
    - grains.get
